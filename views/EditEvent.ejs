  <body>

    <% if(isad == 'yes') { %>
      <%-include("../HTML/NavAd.html") %>
  
      <%} else if(isad == 'no') { %>
      <%-include("../HTML/NavUs.html") %>
  
      <%} else{ %>
        <%-include("../HTML/NavUn.html") %>
  
      <%} %>
    <% if(x != '') { %>
      <h1 style="color: green; font-family: Arial, Helvetica, sans-serif;"><%= x %></h1>
    <% } %>
  
    <div class="box">
      <form method="POST">
  
      <div class="row" id="row">
        <% items.forEach(function(act) { %>
          <div class="card" id="test">
            <img src="data:image/<%=act.mainimg.contentType%>;base64,
            <%=act.mainimg.data.toString('base64')%>" class="test1"
              id="card-img-top" data-content="popover"
              data-img="" title="Location"
              data-placement="bottom" >
              <div class="card-body">
                <h5 class="card-title"><%=act.title%></h5>
                  <p class="card-text"><%=act.subj%></p>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Region: <%=act.region%></li>
                        <li class="list-group-item">Date: <%=act.date%></li>
                        <li class="list-group-item">Start Time: <%=act.time%></li>
                        <li class="list-group-item">Price: <%=act.price%></li>
                        </ul>
                        <button id="bbtn"  type="button" class="bbtn" disabled >BOOK NOW!</button>
                      </div>
                      <button name="edit" id="bbtn"  type="submit" class="bbtn2"  value="<%=act.eventid%>">Edit</button>
                      <button name="delete" id="bbtn3"  type="submit" class="bbtn3"   value="<%=act.eventid%>">DELETE!</button>
                    </div>
                    <% }) %>
                    </div>
                  </form>

                  </div>


                </body>

