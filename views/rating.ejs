<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="CSS/raiting.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
  </head>
  <body>



      <% if(isad == 'yes') { %>
        <%-include("../HTML/NavAd.html") %>
    
        <%} else if(isad == 'no') { %>
        <%-include("../HTML/NavUs.html") %>
    
        <%} else{ %>
          <%-include("../HTML/NavUn.html") %>
    
        <%} %>

    <div class="container">
      <form method="POST" enctype="multipart/form-data">
        <div class="row">
          <div class="col-25">
            <label for="subject">Leave us your review:</label>
          </div>
          <div class="col-75">
            <textarea id="subject" name="subj" placeholder="Write something.."
              style="height:100px" required></textarea>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="subject">Choose an image to upload:</label>
          </div>
          <div class="col-75">
            <input type="file" id="uimg" name="uimg" accept="image/*">
          </div>
          <div class="rating" name="rating">
            <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label>
            <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label>
            <input type="radio" name="rating" value="3" id="3"
              checked="checked"><label for="3">☆</label>
            <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label>
            <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label>
          </div>
        </div>
        <div class="row">
          <input type="submit" value="Submit">
        </div>
      </form>
    </div>


    <hr>


    <h1>Uploaded Reviws</h1>
    <div>
      <% items.forEach(function(image) {

        if (!(image.img.data == null)){

        %>
        <div class="card">
          <div class="row d-flex">
            <div class="d-flex flex-column">
              <h3 class="user">User: <%= image.user%> </h3>
              <div>
                <p class="text-left"><span class="text-muted"><%= image.rate%> / 5</span>
                  <% for (let i = 0; i < image.rate; i++) {%>
                  <i class="bi bi-star-fill"></i>
                  <%}%>
                  <% for (let i = 0; i < 5 - image.rate; i++) {%>
                  <i class="bi bi-star"></i>
                  <%}%>
                </p>
              </div>
            </div>
            <div class="ml-auto">
              <p class="text-muted pt-5 pt-sm-3"><%= image.date%></p>
            </div>
          </div>
          <div class="row text-left">
            <p class="content"><%= image.subj%></p>
          </div>
          <div class="row text-left">
            <img class="pic" src="data:image/<%=image.img.contentType%>;base64,
            <%=image.img.data.toString('base64')%>">
            </div>
          </div>
          <% }else { %>
            <div class="card">
          <div class="row d-flex">
            <div class="d-flex flex-column">
              <h3 class="user">User: <%= image.user%> </h3>
              <div>
                <p class="text-left"><span class="text-muted"><%= image.rate%> / 5</span>
                  <% for (let i = 0; i < image.rate; i++) {%>
                  <i class="bi bi-star-fill"></i>
                  <%}%>
                  <% for (let i = 0; i < 5 - image.rate; i++) {%>
                  <i class="bi bi-star"></i>
                  <%}%>
                </p>
              </div>
            </div>
            <div class="ml-auto">
              <p class="text-muted pt-5 pt-sm-3"><%= image.date%></p>
            </div>
          </div>
          <div class="row text-left">
            <p class="content"><%= image.subj%></p>
          </div>
          </div>

            <% }}) %>
            </div>


            <script>

</script>



          </body>
        </html>