<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <link rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="CSS/EditTravelSug.css">

  </head>
  <body>
    <% if(isad == 'yes') { %>
      <%-include("../HTML/NavAd.html") %>
  
      <%} else if(isad == 'no') { %>
      <%-include("../HTML/NavUs.html") %>
  
      <%} else{ %>
        <%-include("../HTML/NavUn.html") %>
  
      <%} %>

    <% if(x != '') { %>
      <h1 style="color: green; font-family: Arial, Helvetica, sans-serif;"><%= x %></h1>
    <% } %>
      <form method="POST">
        <div class="box">
            <% hed.forEach(function(el) { %>
            <div class="card" id="test">
                <img src="data:image/<%=el.mainimg.contentType%>;base64,
                <%=el.mainimg.data.toString('base64')%>">
                <div class="card-body">
                  <h5 class="card-title"><%=el.title%></h5>
                    <p class="card-text"><%=el.subj%></p>
      
                    </div>
                    <button name="edit" id="bbtn"  type="submit" class="bbtn2"  value=<%=el.headid%>>Edit</button>
                  </div>
                  <%})%>
        <div class="row" id="row">
            <% items.forEach(function(act) { %>
              <div class="card">
                <img src="data:image/<%=act.mainimg.contentType%>;base64,
                <%=act.mainimg.data.toString('base64')%>" class="test1"
                  id="card-img-top" data-content="popover"
                  data-img="" title="Location"
                  data-placement="bottom" >
                  <div class="card-body">
                    <h5 class="card-title"><%=act.title%></h5>
                      <p class="card-text"><%=act.subj%></p>
                        <button id="bbtn1" type="button" class="bbtn"><a
                            href=<%=act.gmap%>
                            target="_blank" rel="nofollow" type="button" disabled>[SEE
                            MAP]</a></button>
                        <button id="bbtn2" type="button" class="bbtn"><a
                            href=<%=act.read%>
                            target="_blank" rel="nofollow" type="button" disabled>ReadMore!</a></button>
                      </div>
                      <button name="edit" id="bbtn"  type="submit" class="bbtn2"  value="<%=act.travid%>">Edit</button>
                      <button name="delete" id="bbtn3"  type="submit" class="bbtn3"   value="<%=act.travid%>">DELETE!</button>
                    </div>
                    <% }) %>
                    </div>
                            </form>
                  </div>


                </body>


