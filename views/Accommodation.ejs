<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <link rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="CSS/Accommodation.css">


    </head>
    <body>
        <% if(isad == 'yes') { %>
            <%-include("../HTML/NavAd.html") %>
        
            <%} else if(isad == 'no') { %>
            <%-include("../HTML/NavUs.html") %>
        
            <%} else{ %>
              <%-include("../HTML/NavUn.html") %>
        
            <%} %>
        <% if(x != '') { %>
            <h1 style="color: green; font-family: Arial, Helvetica, sans-serif;"><%= x %></h1>
          <% } %>
            <div class="box">

                <h1>Accommodations</h1>
      <form method="POST">

                
                <div class="row" id="row">

                    <% items.forEach(function(act) { %>

                    <div class="card" id="test">
                        <img src="data:image/<%=act.mainimg.contentType%>;base64,
            <%=act.mainimg.data.toString('base64')%>" class="test1">

                            <div class="popover__content">
                                <div class="modal-area">
                                    <img src="data:image/<%=act.loimg.contentType%>;base64,
                                    <%=act.loimg.data.toString('base64')%>" width="500px">
                                  <p><%=act.subj%></p>
                                  <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Rooms: <%=act.rooms%></li>
                                    <li class="list-group-item">Single sized beds: <%=act.ssb%></li>
                                    <li class="list-group-item">Double sized beds: <%=act.dsb%></li>
                                    <li class="list-group-item">Max Guests: <%=act.guests%></li>
                                    <li class="list-group-item">Price per Guest: <%=act.price%> $</li>

                                </ul>
                                  <button id="book" type="submit" name="book"class="bbtn" value=<%=act.accid%>>BOOK
                                    NOW!</button>
                                </div>
                              </div>
                        <div class="card-body">
                            <h5 class="card-title">Name: <%=act.title%></h5>
                            <p class="card-text">Category: <%=act.cat%></p>
                        </div>
                    </div>

                    <% }); %>
                    
                    
                    
                </div>
            </form>

            </div>


        </body>


        <script>

</script>
    </html>