<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <link rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="CSS/events.css">


  </head>
  <body>
    
    <% if(isad == 'yes') { %>
      <%-include("../HTML/NavAd.html") %>
  
      <%} else if(isad == 'no') { %>
      <%-include("../HTML/NavUs.html") %>
  
      <%} else{ %>
        <%-include("../HTML/NavUn.html") %>
  
      <%} %>

    <div class="box">
      <h1>Events</h1>
      <div class="row" id="row">
        <% items.forEach(function(act) { %>
          <div class="card" id="test">
            <img src="data:image/<%=act.mainimg.contentType%>;base64,
            <%=act.mainimg.data.toString('base64')%>" class="test1">
            <div class="popover__content">
              <div class="modal-area">
                <img src="data:image/<%=act.loimg.contentType%>;base64,
                <%=act.loimg.data.toString('base64')%>" width="500px">
              </div>
            </div>
             
              <div class="card-body">
                <h5 class="card-title"><%=act.title%></h5>
                  <p class="card-text"><%=act.subj%></p>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Region: <%=act.region%></li>
                        <li class="list-group-item">Date: <%=act.date%></li>
                        <li class="list-group-item">Start Time: <%=act.time%></li>
                        <li class="list-group-item">Price: <%=act.price%></li>
                        </ul>
                        <button id="bbtn"  type="button" class="bbtn"  >BOOK NOW!</button>
                      </div>
                    </div>
                    <% }) %>
                    </div>

                  </div>


                </body>


